#
# CONFIG FILE FOR SQUIDGUARD
#
# Caution: do NOT use comments inside { }
#

dbhome /var/lib/squidguard/db
logdir /var/log/squidguard

#
# TIME RULES:
# abbrev for weekdays:
# s = sun, m = mon, t =tue, w = wed, h = thu, f = fri, a = sat

time workhours {
    weekly mtwhf 08:00 - 16:30
    date *-*-01  08:00 - 16:30
}

#
# SOURCE ADDRESSES:
#

<% @src.each do |i| -%>
<%= i %>
<% end if @src && @src.any? %>

#
# DESTINATION CLASSES:
#
# [see also in file dest-snippet.txt]

<% @dest.each do |i| -%>
<%= i %>
<% end if @dest && @dest.any? %>

#
# ACL RULES:
#

acl {
<% if @acl && @acl.any? %>

<% @acl.each do |i| -%>
<%= i %>
<% end %>
<% @defaultAcl.each do |i| -%>
<%= i %>
<% end if @defaultAcl && @defaultAcl.any? %>
<% else %>
  default {
    pass all
  }
<% end %>
}

